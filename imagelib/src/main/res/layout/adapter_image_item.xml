<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="1dp">

    <com.xingchen.imageselector.view.SquareImageView
        android:id="@+id/iv_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#010101"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/selector_image_pick"
        app:layout_constraintEnd_toEndOf="@id/iv_media"
        app:layout_constraintTop_toTopOf="@id/iv_media" />

    <ImageView
        android:id="@+id/iv_type_gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:src="@drawable/ic_gif"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/iv_media"
        app:layout_constraintEnd_toEndOf="@id/iv_media" />
</androidx.constraintlayout.widget.ConstraintLayout>